    <script>
        // JavaScript to animate the image and text
        window.addEventListener('load', () => {
            const image = document.querySelector('.image');
            const newHeader = document.querySelector('.new-header');
            const newSubheader = document.querySelector('.new-subheader');

            // Animate the image
            setTimeout(() => {
                image.style.top = '0';
                image.style.opacity = '1';
            }, 500);

            // Animate the new header and subheader
            setTimeout(() => {
                newHeader.style.display = 'block';
                newSubheader.style.display = 'block';
            }, 1000);
        });
